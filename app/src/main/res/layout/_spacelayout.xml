<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_coach"
    android:background="@drawable/img_background_register_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp" />

    <eu.long1.spacetablayout.SpaceTabLayout
        android:id="@+id/spaceTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"

        app:number_of_tabs="three"
        app:starting_position="two"

        app:tab_color="@color/colorPrimary"
        app:button_color="@color/colorAccent"
        app:text_color="@color/primaryTextColor"

        app:icon_one="@drawable/ic_running_shadow2"
        app:icon_two="@drawable/ic_true_fitness_logo_shadow"
        app:icon_three="@drawable/ic_profile_white_shadow2"


        app:text_one=""
        app:text_two=""
        app:text_three=""
        />

    <ImageView
        android:id="@+id/iv_login_logo_draggable"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="64dp"
        android:contentDescription="TODO"
        android:src="@drawable/true_fitness_logo_nontransparent_notext2"
        android:transitionName="@string/draggable_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>